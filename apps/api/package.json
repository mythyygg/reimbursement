{
  "name": "@reimbursement/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:shared": "tsc -p ../../packages/shared/tsconfig.build.json",
    "predev": "npm run build:shared",
    "dev": "tsx watch src/server.ts",
