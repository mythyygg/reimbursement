{
  "name": "reimbursement",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "dev": "concurrently -k -n web,api \"npm:dev:web\" \"npm:dev:api\"",
    "build": "npm --workspace apps/web run build",
    "lint": "npm --workspace apps/web run lint && tsc -p apps/api/tsconfig.json --noEmit",
    "typecheck": "tsc -p apps/web/tsconfig.json --noEmit && tsc -p apps/api/tsconfig.json --noEmit",
    "test": "npm --workspace apps/api run test",
    "db:generate": "npm --workspace apps/api run db:generate",
    "db:migrate": "npm --workspace apps/api run db:migrate:kit",
    "db:push": "npm --workspace apps/api run db:push",
    "db:studio": "npm --workspace apps/api run db:studio"
  },
  "devDependencies": {
    "browserslist": "4.28.1",
    "caniuse-lite": "1.0.30001761",
    "concurrently": "9.2.1",
    "typescript": "5.9.3"
  }
}
